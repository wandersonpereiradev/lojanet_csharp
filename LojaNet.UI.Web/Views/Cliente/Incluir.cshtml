@model LojaNet.Models.Cliente

@{
    ViewBag.Title = "Incluir";
}

<h2>Cadastro de Cliente</h2>

<form class="form-horizontal" method="post">

    @Html.ValidationSummary(null, new { @class="text-danger"})

    <div class="form-group">
        <label class="control-label" for="Nome">Nome:</label>
        <input class="form-control" type="text" name="Nome" value="@Model.Nome" />
    </div>
    <div class="form-group">
        <label class="control-label" for="Nome">Telefone:</label>
        @Html.EditorFor(model=>model.Telefone, new { htmlAttributes = new { @class="form-control"}})
    </div>
    <div class="form-group">
        <label class="control-label" for="Nome">Email:</label>
        <input class="form-control" type="text" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <input class="btn btn-default" type="submit" value="Gravar" />
    </div>

    
</form>

